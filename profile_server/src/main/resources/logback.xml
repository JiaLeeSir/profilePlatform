<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true" scanPeriod="60 seconds" debug="false">
	<property name="log.home" value="${PLATFORM_HOME:-}/logs" />

	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<!-- 对日志进行格式化 -->
		<encoder>
			<charset>UTF-8</charset>
			<pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n</pattern>
		</encoder>
	</appender>

	<appender name="ALL" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<filter class="ch.qos.logback.classic.filter.ThresholdFilter">
			<springProfile name="prod">
				<level>INFO</level>
			</springProfile>
			<springProfile name="test,dev">
				<level>DEBUG</level>
			</springProfile>
		</filter>
		<rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
			<!-- rollover daily -->
			<fileNamePattern>${log.home}/label_%d{yyyy-MM-dd}_%i.log</fileNamePattern>
			<!-- each file should be at most 100MB, keep 15 days worth of history, but at most 10GB -->
			<maxFileSize>100MB</maxFileSize>
			<maxHistory>7</maxHistory>
			<totalSizeCap>10GB</totalSizeCap>
		</rollingPolicy>
		<encoder>
			<charset>UTF-8</charset>
			<pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
		</encoder>
	</appender>

	<springProfile name="dev">
		<logger name="com.am.profile" additivity="FALSE" level="DEBUG">
			<appender-ref ref="ALL"/>
		</logger>

		<logger name="com.am.profile" additivity="FALSE" level="INFO">
			<appender-ref ref="ALL"/>
		</logger>
	</springProfile>

	<springProfile name="test,press">
		<logger name="com.am.profile" additivity="FALSE" level="DEBUG">
			<appender-ref ref="ALL"/>
		</logger>

		<logger name="com.am.profile" additivity="FALSE" level="INFO">
			<appender-ref ref="ALL"/>
		</logger>
	</springProfile>

	<springProfile name="prod">
		<logger name="com.am.profile" additivity="FALSE" level="INFO">
			<appender-ref ref="ALL"/>
		</logger>
	</springProfile>

	<!-- root级别 WARN -->
	<root level="WARN">
		<appender-ref ref="ALL" />
	</root>

</configuration>